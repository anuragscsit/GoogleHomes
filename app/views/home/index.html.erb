<section class="cover fullscreen image-slider slider-all-controls controls-inside parallax landing-div">
  <ul class="slides">
    <li class="overlay image-bg">
      <div class="background-image-holder ">
      </div>
      <div class="container v-align-transform">
        <div class="row">
          <div class="col-md-10 col-md-offset-1 col-sm-12 text-center">
            <h1 class="mb8">City apartments: your smart home alternative.</h1>
            <p class="lead mb48">
              Perfect for those advertising a new product or service who wish to drive subscribers.
            </p>
            <div class="search-form row">
              <%= form_tag search_index_path, method: 'get' do %>
              <div class="select-option col-sm-3">
                <i class="ti-angle-down"></i>
                <select>
                  <option selected="" value="Default">Select City</option>
                  <option value="Small">Indore</option>
                  <option value="Medium">Bhopal</option>
                  <option value="Larger">Jabalpur</option>
                </select>
              </div>
              <div class="col-sm-4" id="input-location"><i class="ti-location-pin "></i>
                <input type="text" name="name" id="search-location" placeholder="location" />
              </div>  
              <div class="form-group hidden">
                <%= hidden_field_tag :lat, nil, id: 'search-location-lat' %>
              </div>
              <div class="form-group hidden">
                <%= hidden_field_tag :lng, nil, id: 'search-location-long' %>
              </div>
              <div class="select-option col-sm-3">
                <i class="ti-angle-down"></i>
                <select>
                  <option selected="" value="Default">Looking for</option>
                  <option value="Small">Boy</option>
                  <option value="Medium">Girl</option>
                </select>
              </div>
              <div class="col-sm-2">
                <input type="submit" value="Search" class="search-house-btn"/>
              </div>  
              <% end %>
            </div>
          </div>
        </div>
        <!--end of row-->
      </div>
      <!--end of container-->
    </li>
  </ul>
</section>
<section>
 <%= render 'about'%>
</section>
<section class="bg-dark">
  <%= render 'why_use'%>
</section>
<section>
  <%= render 'house_detail'%>
</section>
<section class="pt0 pb0">
  <%= render 'feature'%>
</section>

<section class="pt120 pb120 image-bg overlay">
  <%= render 'feedback'%>
</section>
<script type="text/javascript">
  $("#search-location").geocomplete();
  $("#search-location").geocomplete().bind("geocode:result", function(event, result){
  var lat = result.geometry.location.lat();
  var lng = result.geometry.location.lng();
  $('#search-location-lat').val(lat);
  $('#search-location-long').val(lng);
});
</script>