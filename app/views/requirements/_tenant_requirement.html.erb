<section>
	<div class="col-sm-6 col-sm-offset-3">
		<div>
			<h4>Post Your Requirement</h4>
			<h5>Let us know what you need and we'll send you houses matching your requirements.</h5>
		</div>	
		<div>
			<%= form_for (@requirement) do |f| %>
			<% if @requirement.errors.any? %>
			<div id="error_explanation">
				<h4><%= pluralize(@requirement.errors.count, "error") %> prohibited this house from being saved:</h4>
				<ul>
					<% @requirement.errors.full_messages.each do |message| %>
					<li><%= message %></li>
					<% end %>
				</ul>
			</div>
			<% end %>
			<%= f.text_field :name,placeholder: 'Name', required:"true",rel: "tooltip", title:"Enter your name","data-placement" => "top" %>
			<%= f.email_field :email,placeholder: 'Email', required:"true",rel: "tooltip", title:"Enter Email" %>
			<%= f.text_field :phone,placeholder: 'Phone', required:"true",rel: "tooltip", title:"Contact number","data-placement" => "top" %>
			<%= f.text_field :city,placeholder: 'City', required:"true",rel: "tooltip", title:"Enter city","data-placement" => "top" %>
			<%= f.text_field :location,placeholder: 'Location', required:"true",rel: "tooltip", title:"Location","data-placement" => "top"  %>
			<div class="select-option">
				<i class="ti-angle-down"></i>
				<%=f.select :room_for, options_for_select([['single boy'], ['Group of single boy'],['single girl'], ['Group of single girls']])%>
			</div>
			<div class="select-option">
				<i class="ti-angle-down"></i>
				<%=f.select :need_within, options_for_select([['within a week']])%>
			</div>
			<%= f.submit "post Requirements",class:'btn' %>
			<%end%>
		</div>	
	</div>
</section>

<script type="text/javascript">
	$("#requirement_location").geocomplete();
	
</script>
<style type="text/css">
input[type='text'],input[type='email'],select{height:40px;border:1px solid #ccc; color:#000;}
input[type='text']:hover,input[type='text']:focus,input[type='email']:hover,input[type='email']:focus,select:hover,select:focus{border:1px solid #303030;}

</style>