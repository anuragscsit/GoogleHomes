<section class="pt0 ">
  <div class="owner-my-house">
    <h3 class="uppercase">Notifications</h3>
  <table class="table">
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @visit_schedules.each do |schedule| %>
      <tr>
        <td class="uppercase"><strong>house_id</strong></td>
        <td class="uppercase"><strong>name</strong></td>
        <td class="uppercase"><strong>email</strong></td>
        <td class="uppercase"><strong>phone</strong></td>
        <td class="uppercase"><strong>action</strong></td>
      </tr>
      <tr>
        <td><%= schedule.house_id %></td>
        <td><%= schedule.name %></td>
        <td><%= schedule.email %></td>
        <td><%= schedule.phone %></td>
        <td><a class="btn btn-sm" data-toggle="modal" data-target="#myModal">reply</a>
</td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%#= link_to 'Register another house', new_house_path, class:'btn' %>
  </div>
</section>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h5 class="modal-title uppercase" id="myModalLabel">Schedule meeting</h5>
      </div>
      <div class="modal-body">
        <label>Reply to user</label>
       <textarea rows="3" placeholder="Your message"></textarea>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn">Reply</button>
      </div>
    </div>
  </div>
</div>